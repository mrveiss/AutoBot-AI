{
  "message_display": {
    "show_thoughts": true,
    "show_json": false,
    "show_utility": false,
    "show_planning": true,
    "show_debug": false
  },
  "chat": {
    "auto_scroll": true,
    "max_messages": 100
  },
  "backend": {
    "use_phi2": true,
    "api_endpoint": "${AUTOBOT_API_BASE_URL}",
    "ollama_endpoint": "${AUTOBOT_OLLAMA_URL}/api/generate",
    "ollama_model": "${AUTOBOT_DEFAULT_LLM_MODEL}",
    "streaming": true,
    "server_host": "0.0.0.0",
    "server_port": "${AUTOBOT_BACKEND_PORT}",
    "chat_data_dir": "data/chats",
    "chat_history_file": "data/chat_history.json",
    "knowledge_base_db": "data/knowledge_base.db",
    "reliability_stats_file": "data/reliability_stats.json",
    "audit_log_file": "data/audit.log",
    "cors_origins": [
      "${AUTOBOT_FRONTEND_URL}",
      "http://${AUTOBOT_FRONTEND_HOST}:5173"
    ],
    "timeout": 60,
    "max_retries": 3,
    "llm": {
      "provider_type": "local",
      "local": {
        "provider": "ollama",
        "providers": {
          "ollama": {
            "endpoint": "${AUTOBOT_OLLAMA_URL}/api/generate",
            "models": [
              "deepseek-r1:14b",
              "mistral:7b-instruct",
              "mixtral:8x7b",
              "tinyllama:latest"
            ],
            "selected_model": "${AUTOBOT_DEFAULT_LLM_MODEL}"
          },
          "lmstudio": {
            "endpoint": "${AUTOBOT_LM_STUDIO_URL}",
            "models": [],
            "selected_model": "google/gemma-3-1b"
          }
        }
      },
      "cloud": {
        "provider": "openai",
        "providers": {
          "openai": {
            "api_key": "",
            "endpoint": "https://api.openai.com/v1/chat/completions",
            "models": [
              "gpt-3.5-turbo",
              "gpt-4"
            ],
            "selected_model": "gpt-3.5-turbo"
          },
          "anthropic": {
            "api_key": "",
            "endpoint": "https://api.anthropic.com/v1/complete",
            "models": [
              "claude-2.0",
              "claude-instant-1.2"
            ],
            "selected_model": "claude-2.0"
          }
        }
      }
    }
  },
  "ui": {
    "theme": "light",
    "font_size": "medium"
  }
}
