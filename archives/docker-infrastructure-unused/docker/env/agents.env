# AutoBot Agent-Specific Configuration
# Shared settings for all AI agent containers

# Agent Framework Configuration
AGENT_TYPE=base
AGENT_NAME=autobot-agent
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION="AutoBot AI Agent"

# Model Configuration (can be overridden per agent)
DEFAULT_MODEL_PROVIDER=ollama
DEFAULT_MODEL_NAME=llama3.2:1b
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=2048
MODEL_TOP_P=0.9
MODEL_FREQUENCY_PENALTY=0.0
MODEL_PRESENCE_PENALTY=0.0

# Ollama Configuration (standardized across agents)
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_TIMEOUT=120
OLLAMA_NUM_PREDICT=2048
OLLAMA_NUM_CTX=4096
OLLAMA_REPEAT_PENALTY=1.1
OLLAMA_SEED=-1

# OpenAI Configuration (if used)
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_VERSION=v1
OPENAI_TIMEOUT=120
OPENAI_MAX_RETRIES=3

# Agent Communication
AGENT_COMMUNICATION_ENABLED=true
AGENT_DISCOVERY_ENABLED=true
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT=300

# Knowledge Base Configuration
KNOWLEDGE_BASE_ENABLED=true
KNOWLEDGE_BASE_PATH=/app/knowledge_base
LOAD_KNOWLEDGE_BASE=true
KNOWLEDGE_BASE_INDEX_ON_STARTUP=true
KNOWLEDGE_BASE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector Database Configuration
VECTOR_DB_TYPE=chroma
VECTOR_DB_PATH=/app/data/chroma_db
VECTOR_DB_PERSIST=true
VECTOR_DB_COLLECTION_NAME=autobot_knowledge

# Prompt Management
PROMPTS_PATH=/app/prompts
PROMPT_CACHE_ENABLED=true
PROMPT_CACHE_TTL=3600
PROMPT_VALIDATION_ENABLED=true

# Memory and Context Management
MAX_CONVERSATION_HISTORY=50
CONTEXT_WINDOW_SIZE=4096
MEMORY_ENABLED=true
MEMORY_PERSISTENCE=true
MEMORY_PATH=/app/data/memory

# Performance Configuration
ASYNC_PROCESSING=true
BATCH_SIZE=10
CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300
RESPONSE_TIMEOUT=120

# Error Handling and Resilience
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
TELEMETRY_ENABLED=true
PERFORMANCE_MONITORING=true

# Security Configuration
AGENT_AUTH_ENABLED=false
AGENT_AUTH_TOKEN=
INPUT_VALIDATION_ENABLED=true
OUTPUT_SANITIZATION_ENABLED=true
COMMAND_FILTERING_ENABLED=true

# Development and Debug
AGENT_DEBUG=false
VERBOSE_LOGGING=false
TRACE_REQUESTS=false
PROFILE_PERFORMANCE=false
