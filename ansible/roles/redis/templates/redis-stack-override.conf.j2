[Service]
# Redis Stack systemd service override for AutoBot
# Generated by Ansible - Redis Role

# Increase limits for production use
LimitNOFILE=65535
LimitNPROC=4096

# Memory
MemoryLimit={{ redis_memory_limit | upper }}

# Restart policy
Restart=always
RestartSec=5s

# Environment
Environment="REDIS_PORT={{ redis_port }}"
Environment="REDIS_BIND=0.0.0.0"
