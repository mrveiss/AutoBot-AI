# TYPE  DATABASE        USER            ADDRESS                 METHOD

# Local connections
local   all             postgres                                peer
local   all             {{ db_user }}                           scram-sha-256

# IPv4 local connections
host    all             {{ db_user }}   127.0.0.1/32            scram-sha-256

# IPv6 local connections
host    all             {{ db_user }}   ::1/128                 scram-sha-256

{% if pg_hba_remote_access is defined %}
# Remote connections (configured per-host)
{% for entry in pg_hba_remote_access %}
host    {{ entry.database }}    {{ entry.user }}    {{ entry.address }}    scram-sha-256
{% endfor %}
{% endif %}
