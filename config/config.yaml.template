# AutoBot Configuration File

# Backend Configuration
backend:
  # API Settings
  api_endpoint: "http://localhost:8001"
  audit_log_file: "data/audit.log"
  chat_data_dir: "data/chats"
  chat_history_file: "data/chat_history.json"

  # CORS Settings
  cors_origins:
    - "http://localhost:5173"
    - "http://127.0.0.1:5173"
    - "http://localhost:3000"
    - "http://127.0.0.1:3000"

  # Data Storage
  knowledge_base_db: "data/knowledge_base.db"

  # LLM Configuration
  llm:
    cloud:
      provider: "openai"
      providers:
        anthropic:
          api_key: ""
          endpoint: "https://api.anthropic.com/v1"
          models:
            - "claude-3-sonnet-20240229"
            - "claude-3-haiku-20240307"
          selected_model: ""
        openai:
          api_key: ""
          endpoint: "https://api.openai.com/v1"
          models:
            - "gpt-3.5-turbo"
            - "gpt-4"
          selected_model: ""
    local:
      provider: "ollama"
      providers:
        lmstudio:
          endpoint: "http://localhost:1234/v1"
          models: []
          selected_model: ""
        ollama:
          endpoint: "http://localhost:11434/api/generate"
          models:
            - "phi:2.7b"
            - "phi:latest"
            - "tinyllama:latest"
            - "llama2:latest"
          selected_model: "phi:2.7b"
    provider_type: "local"

  # Connection Settings
  max_retries: 3
  ollama_endpoint: "http://localhost:11434"
  ollama_model: "phi:2.7b"
  reliability_stats_file: "data/reliability_stats.json"
  server_host: "0.0.0.0"
  server_port: 8001
  streaming: false
  timeout: 60
  use_phi2: false

# Chat Configuration
chat:
  auto_scroll: true
  default_welcome_message: "Hello! How can I assist you today?"
  max_messages: 100
  message_retention_days: 30

# Developer Mode Configuration
developer:
  debug_logging: false
  enabled: false
  endpoint_suggestions: true
  enhanced_errors: true

# Knowledge Base Configuration
knowledge_base:
  enabled: true
  update_frequency_days: 7

# Logging Configuration
logging:
  log_file_path: "logs/autobot.log"
  log_level: "info"
  log_to_file: true

# Memory and Storage Configuration
memory:
  chromadb:
    collection_name: "autobot_memory"
    enabled: true
    path: "data/chromadb"
  long_term:
    enabled: true
    retention_days: 30
  redis:
    enabled: false
    host: "localhost"
    port: 6379
  short_term:
    duration_minutes: 30
    enabled: true
  vector_storage:
    enabled: true
    update_frequency_days: 7

# Message Display Configuration
message_display:
  show_debug: false
  show_json: false
  show_planning: true
  show_thoughts: true
  show_utility: false

# Security Configuration
security:
  enable_encryption: true  # Changed to true for better security by default
  session_timeout_minutes: 30

# Security Configuration for Authentication and Authorization
security_config:
  enable_auth: true
  audit_log_file: logs/audit.log
  allowed_users:
    admin:
      password_hash: $2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewdBPj4SH.LKhO/y  # password: autobotadmin123
      role: admin
      email: admin@autobot.local
      created_at: '2025-01-01T00:00:00Z'
    developer:
      password_hash: $2b$12$EixZaYVK1fsbw1ZfbX3OXePaWxn96p36WQoeG6Lrw3vjPiS394C2u  # password: dev123secure
      role: developer
      email: dev@autobot.local
      created_at: '2025-01-01T00:00:00Z'
    readonly:
      password_hash: $2b$12$92IXUNpkjO0rOQ5byMi.Ye4oKoEa3Ro9llC/.og/at2.uheWG/igi  # password: readonly123
      role: readonly
      email: readonly@autobot.local
      created_at: '2025-01-01T00:00:00Z'
  roles:
    admin:
      permissions:
      - allow_all
      description: Full system access with all permissions
    developer:
      permissions:
      - files.*
      - allow_goal_submission
      - allow_kb_read
      - allow_kb_write
      - allow_chat_control
      - allow_agent_control
      - allow_command_approval
      - allow_voice_listen
      - allow_voice_speak
      description: Development access with most permissions except system commands
    editor:
      permissions:
      - files.view
      - files.download
      - files.upload
      - files.create
      - allow_goal_submission
      - allow_kb_read
      - allow_kb_write
      - allow_chat_control
      description: Content editing and knowledge base management
    user:
      permissions:
      - files.view
      - files.download
      - allow_goal_submission
      - allow_kb_read
      - allow_chat_control
      description: Basic user access for interaction
    readonly:
      permissions:
      - files.view
      - files.download
      - allow_kb_read
      description: Read-only access for viewing content
    guest:
      permissions:
      - files.view
      description: Very limited guest access
  password_policy:
    min_length: 12
    require_uppercase: true
    require_lowercase: true
    require_numbers: true
    require_special_chars: true
    max_age_days: 90
  session_config:
    session_timeout_minutes: 30
    max_concurrent_sessions: 5
    require_2fa: false
  audit_config:
    log_all_actions: true
    log_failed_attempts: true
    retention_days: 365
    sensitive_data_masking: true

# UI Configuration
ui:
  animations: true
  developer_mode: false
  font_size: "medium"
  language: "en"
  theme: "light"

# Voice Interface Configuration
voice_interface:
  enabled: false
  speech_rate: 1.0
  voice: "default"
