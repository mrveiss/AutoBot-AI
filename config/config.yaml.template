# AutoBot Configuration File

# Backend Configuration
backend:
  # Server Settings
  server_host: "0.0.0.0"
  server_port: 8001
  api_endpoint: "http://localhost:8001"
  
  # CORS Settings
  cors_origins:
    - "http://localhost:5173"
    - "http://127.0.0.1:5173"
    - "http://localhost:8080"
    - "http://127.0.0.1:8080"
    - "http://localhost:3000"
    - "http://127.0.0.1:3000"
  
  # Data Storage Paths
  chat_data_dir: "data/chats"
  chat_history_file: "data/chat_history.json"
  messages_dir: "data/messages"
  knowledge_base_db: "data/knowledge_base.db"
  reliability_stats_file: "data/reliability_stats.json"
  audit_log_file: "data/audit.log"
  
  # Timeout and Retry Settings
  timeout: 60
  max_retries: 3
  streaming: false

# LLM Configuration
llm_config:
  default_llm: "ollama_tinyllama"
  task_llm: "ollama_tinyllama"
  
  # Ollama Configuration
  ollama:
    host: "http://localhost:11434"
    port: 11434
    endpoint: "http://localhost:11434/api/generate"
    base_url: "http://localhost:11434"
    models:
      tinyllama: "tinyllama:latest"
      phi2: "phi:latest"
      llama2: "llama2:latest"
  
  # OpenAI Configuration
  openai:
    api_key: ""
    endpoint: "https://api.openai.com/v1"
    models:
      - "gpt-3.5-turbo"
      - "gpt-4"
  
  # Anthropic Configuration
  anthropic:
    api_key: ""
    endpoint: "https://api.anthropic.com/v1"
    models:
      - "claude-3-sonnet-20240229"
      - "claude-3-haiku-20240307"
  
  # LLM Settings
  orchestrator_llm_settings:
    temperature: 0.7
  task_llm_settings:
    temperature: 0.5

# Memory and Storage Configuration
memory:
  long_term:
    enabled: true
    retention_days: 30
    db_path: "data/agent_memory.db"
  
  short_term:
    enabled: true
    duration_minutes: 30
  
  vector_storage:
    enabled: true
    update_frequency_days: 7
  
  chromadb:
    enabled: true
    path: "data/chromadb"
    collection_name: "autobot_memory"
  
  redis:
    enabled: false
    host: "localhost"
    port: 6379

# Security Configuration
security:
  enable_encryption: false
  session_timeout_minutes: 30
  audit_log_file: "data/audit.log"

# Logging Configuration
logging:
  log_level: "info"
  log_to_file: true
  log_file_path: "logs/autobot.log"

# UI Configuration
ui:
  theme: "light"
  font_size: "medium"
  language: "en"
  animations: true
  developer_mode: false

# Developer Mode Configuration
developer:
  enabled: false
  enhanced_errors: true
  endpoint_suggestions: true
  debug_logging: false

# Chat Configuration
chat:
  auto_scroll: true
  max_messages: 100
  message_retention_days: 30
  default_welcome_message: "Hello! How can I assist you today?"

# Message Display Configuration
message_display:
  show_thoughts: true
  show_json: false
  show_utility: false
  show_planning: true
  show_debug: false

# Knowledge Base Configuration
knowledge_base:
  enabled: true
  update_frequency_days: 7
  db_path: "data/knowledge_base.db"

# Voice Interface Configuration
voice_interface:
  enabled: false
  voice: "default"
  speech_rate: 1.0

# Hardware Acceleration Configuration
hardware_acceleration:
  priority:
    - "openvino_npu"  # Intel NPU - highest priority for efficiency
    - "openvino"      # Auto-select best OpenVINO device (NPU > GPU > CPU)
    - "cuda"          # NVIDIA GPU
    - "cpu"           # CPU fallback

# Test Configuration
test:
  chat_history_file: "data/test_chat_history.json"
