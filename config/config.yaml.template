# AutoBot Configuration File

# Backend Configuration
backend:
  # API Settings
  api_endpoint: "http://localhost:8001"
  audit_log_file: "data/audit.log"
  chat_data_dir: "data/chats"
  chat_history_file: "data/chat_history.json"
  
  # CORS Settings
  cors_origins:
    - "http://localhost:5173"
    - "http://127.0.0.1:5173"
    - "http://localhost:8080"
    - "http://127.0.0.1:8080"
    - "http://localhost:3000"
    - "http://127.0.0.1:3000"
  
  # Data Storage
  knowledge_base_db: "data/knowledge_base.db"
  
  # LLM Configuration
  llm:
    cloud:
      provider: "openai"
      providers:
        anthropic:
          api_key: ""
          endpoint: "https://api.anthropic.com/v1"
          models:
            - "claude-3-sonnet-20240229"
            - "claude-3-haiku-20240307"
          selected_model: ""
        openai:
          api_key: ""
          endpoint: "https://api.openai.com/v1"
          models:
            - "gpt-3.5-turbo"
            - "gpt-4"
          selected_model: ""
    local:
      provider: "ollama"
      providers:
        lmstudio:
          endpoint: "http://localhost:1234/v1"
          models: []
          selected_model: ""
        ollama:
          endpoint: "http://localhost:11434/api/generate"
          models:
            - "tinyllama:latest"
            - "phi:latest"
            - "llama2:latest"
          selected_model: "tinyllama:latest"
    provider_type: "local"
  
  # Connection Settings
  max_retries: 3
  ollama_endpoint: "http://localhost:11434"
  ollama_model: "phi:2.7b"
  reliability_stats_file: "data/reliability_stats.json"
  server_host: "0.0.0.0"
  server_port: 8001
  streaming: false
  timeout: 60
  use_phi2: false

# Chat Configuration
chat:
  auto_scroll: true
  default_welcome_message: "Hello! How can I assist you today?"
  max_messages: 100
  message_retention_days: 30

# Developer Mode Configuration
developer:
  debug_logging: false
  enabled: false
  endpoint_suggestions: true
  enhanced_errors: true

# Knowledge Base Configuration
knowledge_base:
  enabled: true
  update_frequency_days: 7

# Logging Configuration
logging:
  log_file_path: "logs/autobot.log"
  log_level: "info"
  log_to_file: true

# Memory and Storage Configuration
memory:
  chromadb:
    collection_name: "autobot_memory"
    enabled: true
    path: "data/chromadb"
  long_term:
    enabled: true
    retention_days: 30
  redis:
    enabled: false
    host: "localhost"
    port: 6379
  short_term:
    duration_minutes: 30
    enabled: true
  vector_storage:
    enabled: true
    update_frequency_days: 7

# Message Display Configuration
message_display:
  show_debug: false
  show_json: false
  show_planning: true
  show_thoughts: true
  show_utility: false

# Security Configuration
security:
  enable_encryption: false
  session_timeout_minutes: 30

# UI Configuration
ui:
  animations: true
  developer_mode: false
  font_size: "medium"
  language: "en"
  theme: "light"

# Voice Interface Configuration
voice_interface:
  enabled: false
  speech_rate: 1.0
  voice: "default"
