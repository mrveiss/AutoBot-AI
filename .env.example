# AutoBot Backend Environment Configuration
# Copy this file to .env and adjust values for your environment

# API Configuration
AUTOBOT_API_BASE_URL=http://localhost:8001
AUTOBOT_API_TIMEOUT=30000
AUTOBOT_RETRY_ATTEMPTS=3

# Database and Redis
AUTOBOT_REDIS_URL=redis://localhost:6379
AUTOBOT_DB_PATH=data/
AUTOBOT_KNOWLEDGE_DB=data/knowledge_base.db
AUTOBOT_MEMORY_DB=data/memory_system.db

# LLM Services
AUTOBOT_OLLAMA_URL=http://localhost:11434
AUTOBOT_OPENAI_API_KEY=
AUTOBOT_ANTHROPIC_API_KEY=

# WebSocket Configuration
AUTOBOT_WS_BASE_URL=ws://localhost:8001/ws

# Security Settings
AUTOBOT_SECRET_KEY=your-secret-key-here
AUTOBOT_JWT_SECRET=your-jwt-secret-here
AUTOBOT_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
AUTOBOT_LOG_LEVEL=INFO
AUTOBOT_LOG_FILE=logs/autobot.log

# Performance Settings
AUTOBOT_MAX_WORKERS=4
AUTOBOT_REQUEST_TIMEOUT=30
AUTOBOT_MAX_CONNECTIONS=100

# Feature Flags
AUTOBOT_ENABLE_NPU=true
AUTOBOT_ENABLE_REDIS_CACHE=true
AUTOBOT_ENABLE_DEBUG=false

# Production Overrides (uncomment for production)
# AUTOBOT_API_BASE_URL=https://your-domain.com
# AUTOBOT_WS_BASE_URL=wss://your-domain.com/ws
# AUTOBOT_ENABLE_DEBUG=false
# AUTOBOT_LOG_LEVEL=WARNING
