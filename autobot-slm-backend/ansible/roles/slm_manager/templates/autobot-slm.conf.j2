# AutoBot SLM Nginx Configuration
# Managed by Ansible - slm_manager role

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name _;

    return 301 https://$host$request_uri;
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name _;

    # SSL configuration
    ssl_certificate {{ slm_tls_cert }};
    ssl_certificate_key {{ slm_tls_key }};

    # SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Logging
    access_log {{ slm_log_dir }}/nginx-access.log;
    error_log {{ slm_log_dir }}/nginx-error.log;

    # Frontend static files
    root {{ slm_frontend_dir }}/dist;
    index index.html;

    # WebSocket endpoint (must be before /api/ to take priority)
    location /api/ws/ {
        proxy_pass http://{{ slm_backend_host }}:{{ slm_backend_port }}/api/ws/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400;
    }

    # API reverse proxy
    location /api/ {
        proxy_pass http://{{ slm_backend_host }}:{{ slm_backend_port }}/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Health check endpoint (bypass auth)
    location /api/health {
        proxy_pass http://{{ slm_backend_host }}:{{ slm_backend_port }}/api/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # Grafana Live WebSocket (must be before the general /grafana/ block)
    location /grafana/api/live/ {
        proxy_pass http://{{ grafana_host | default('127.0.0.1') }}:{{ grafana_port | default(3000) }}/grafana/api/live/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600;
    }

    # Grafana reverse proxy (monitoring dashboards)
    # Issue #853: Support both local and external Grafana instances
    location /grafana/ {
        proxy_pass http://{{ grafana_host | default('127.0.0.1') }}:{{ grafana_port | default(3000) }}/grafana/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
{% if grafana_enable_cors | default(false) %}

        # CORS headers for external Grafana iframe embedding
        add_header Access-Control-Allow-Origin "{{ grafana_cors_origin }}" always;
        add_header Access-Control-Allow-Credentials "true" always;
{% endif %}
    }

    # Prometheus reverse proxy (metrics queries)
    location /prometheus/ {
        proxy_pass http://127.0.0.1:{{ prometheus_port | default(9090) }}/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Main AutoBot backend proxy (user backend skills, cache, etc.)
    # /autobot-api/* → https://main_backend/api/* (strips /autobot-api prefix)
    location /autobot-api/ {
        proxy_pass https://{{ autobot_backend_host | default('172.16.168.20') }}:{{ autobot_backend_port | default(8443) }}/api/;
        proxy_http_version 1.1;
        proxy_ssl_verify off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # noVNC WebSocket/HTTP proxy — Issue #1002
    # /tools/novnc/* → http://main_backend:6080/* (strips /tools/novnc prefix)
    # Needed to avoid mixed-content blocking when embedding VNC in HTTPS SLM admin.
    location /tools/novnc/ {
        proxy_pass http://{{ autobot_backend_host | default('172.16.168.20') }}:{{ novnc_port | default(6080) }}/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600;
    }

    # Frontend SPA routing - serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;
    gzip_min_length 1000;
}
