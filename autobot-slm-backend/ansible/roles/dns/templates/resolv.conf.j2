# AutoBot resolv.conf
# Generated by Ansible - DO NOT EDIT MANUALLY

# Use local dnsmasq for DNS resolution
nameserver {{ dnsmasq_listen_address }}

# Search domains
{% for domain in dns_search_domains %}
search {{ domain }}
{% endfor %}

# Fallback DNS servers (if dnsmasq fails)
{% for dns_server in systemd_resolved_fallback_dns %}
nameserver {{ dns_server }}
{% endfor %}

# Options
options timeout:2 attempts:3 rotate single-request-reopen
