# Loki Configuration
# Generated by Ansible - centralized_logging role
auth_enabled: false

server:
  http_listen_port: {{ loki_port }}
  grpc_listen_port: 9096

common:
  path_prefix: {{ loki_data_dir }}
  storage:
    filesystem:
      chunks_directory: {{ loki_data_dir }}/chunks
      rules_directory: {{ loki_data_dir }}/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

schema_config:
  configs:
    - from: 2020-10-24
      store: boltdb-shipper
      object_store: filesystem
      schema: v11
      index:
        prefix: index_
        period: 24h

storage_config:
  boltdb_shipper:
    active_index_directory: {{ loki_data_dir }}/index
    cache_location: {{ loki_data_dir }}/index_cache
    shared_store: filesystem
  filesystem:
    directory: {{ loki_data_dir }}/chunks

compactor:
  working_directory: {{ loki_data_dir }}/compactor
  shared_store: filesystem
  compaction_interval: 10m
  retention_enabled: true
  retention_delete_delay: 2h
  retention_delete_worker_count: 150

limits_config:
  retention_period: {{ log_retention_days }}d
  enforce_metric_name: false
  reject_old_samples: true
  reject_old_samples_max_age: 168h
  ingestion_rate_mb: 10
  ingestion_burst_size_mb: 20

chunk_store_config:
  max_look_back_period: {{ log_retention_days }}d

table_manager:
  retention_deletes_enabled: true
  retention_period: {{ log_retention_days }}d
