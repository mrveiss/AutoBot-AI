# AutoBot User Frontend - Nginx Configuration
# Generated by Ansible - Frontend Role
# Serves production build via HTTPS, proxies API to user backend

server {
    listen {{ nginx_http_port }} default_server;
    listen [::]:{{ nginx_http_port }} default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name _;

    # TLS
    ssl_certificate {{ frontend_tls_cert }};
    ssl_certificate_key {{ frontend_tls_key }};
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Logging
    access_log /var/log/nginx/autobot-frontend-access.log;
    error_log /var/log/nginx/autobot-frontend-error.log;

    # Serve production build
    root {{ frontend_dist_dir }};
    index index.html;

    # SPA fallback - serve index.html for client-side routes
    location / {
        try_files $uri $uri/ /index.html;

        # Prevent caching of HTML (new deployments picked up immediately)
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";

        # Security headers
        add_header X-Frame-Options SAMEORIGIN;
        add_header X-Content-Type-Options nosniff;
        add_header X-XSS-Protection "1; mode=block";
        add_header Referrer-Policy strict-origin-when-cross-origin;
    }

    # Static assets - long cache
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff2?|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # API proxy to user backend
    location /api/ {
        proxy_pass {{ backend_protocol | default('https') }}://{{ backend_host }}:{{ backend_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        # Accept self-signed certificates from backend
        proxy_ssl_verify off;
    }

    # WebSocket proxy for terminal/chat
    location /api/ws {
        proxy_pass {{ backend_protocol | default('https') }}://{{ backend_host }}:{{ backend_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 86400;
        proxy_ssl_verify off;
    }

    location /api/terminal/ws {
        proxy_pass {{ backend_protocol | default('https') }}://{{ backend_host }}:{{ backend_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 300s;
        proxy_ssl_verify off;
    }

    # WebSocket general
    location /ws {
        proxy_pass {{ backend_protocol | default('https') }}://{{ backend_host }}:{{ backend_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_read_timeout 86400;
        proxy_ssl_verify off;
    }

    # VNC proxy for desktop access
    location /tools/novnc/ {
        proxy_pass http://{{ backend_host }}:6080/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # Health check
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
}
