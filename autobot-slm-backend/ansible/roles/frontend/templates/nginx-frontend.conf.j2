# AutoBot User Frontend - Nginx Configuration
# Generated by Ansible - Frontend Role
# Serves production build via HTTPS, proxies API to user backend

# Issue #1098: Health-aware upstream with failure tracking
upstream autobot_backend {
    server {{ backend_host }}:{{ backend_port }} max_fails={{ backend_max_fails | default(3) }} fail_timeout={{ backend_fail_timeout | default('30s') }};
}

server {
    listen {{ nginx_http_port }} default_server;
    listen [::]:{{ nginx_http_port }} default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name _;

    # TLS
    ssl_certificate {{ frontend_tls_cert }};
    ssl_certificate_key {{ frontend_tls_key }};
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Logging
    access_log /var/log/nginx/autobot-frontend-access.log;
    error_log /var/log/nginx/autobot-frontend-error.log;

    # Serve production build
    root {{ frontend_dist_dir }};
    index index.html;

    # Enable ETag support for cache validation
    etag on;

    # Issue #1098: Custom error pages for backend unavailability
    error_page 502 /502.html;
    error_page 504 /504.html;

    location = /502.html {
        internal;
        default_type text/html;
        return 502 '<!DOCTYPE html><html><head><meta charset="utf-8"><title>AutoBot - Starting Up</title><meta http-equiv="refresh" content="10"><style>body{font-family:system-ui,sans-serif;display:flex;justify-content:center;align-items:center;min-height:100vh;margin:0;background:#1a1a2e;color:#e0e0e0}div{text-align:center;max-width:500px;padding:2rem}.spinner{width:50px;height:50px;border:4px solid #333;border-top:4px solid #00d4ff;border-radius:50%;animation:spin 1s linear infinite;margin:0 auto 1.5rem}@keyframes spin{to{transform:rotate(360deg)}}h1{color:#00d4ff;margin-bottom:.5rem}p{color:#999;line-height:1.6}</style></head><body><div><div class="spinner"></div><h1>Backend Starting Up</h1><p>The AutoBot backend is currently unavailable. This page will refresh automatically.</p><p style="font-size:.85em;margin-top:1.5rem">If this persists, check backend status on the SLM dashboard.</p></div></body></html>';
    }

    location = /504.html {
        internal;
        default_type text/html;
        return 504 '<!DOCTYPE html><html><head><meta charset="utf-8"><title>AutoBot - Request Timeout</title><style>body{font-family:system-ui,sans-serif;display:flex;justify-content:center;align-items:center;min-height:100vh;margin:0;background:#1a1a2e;color:#e0e0e0}div{text-align:center;max-width:500px;padding:2rem}h1{color:#ff9800;margin-bottom:.5rem}p{color:#999;line-height:1.6}</style></head><body><div><h1>Request Timed Out</h1><p>The backend took too long to respond. This can happen with heavy analytics queries.</p><p style="font-size:.85em;margin-top:1.5rem">Try again or reduce the query scope.</p></div></body></html>';
    }

    # HTML files - NEVER cache (ensures new deployments load immediately)
    location ~* \.html$ {
        # Strongest possible no-cache headers
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
        add_header Pragma "no-cache";
        add_header Expires "0";
        add_header Last-Modified $date_gmt;

        # Force revalidation on every request
        if_modified_since off;
        add_header 'Cache-Control' 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';

        # Security headers
        add_header X-Frame-Options SAMEORIGIN;
        add_header X-Content-Type-Options nosniff;
        add_header X-XSS-Protection "1; mode=block";
        add_header Referrer-Policy strict-origin-when-cross-origin;

        try_files $uri =404;
    }

    # Static assets with hash in filename - aggressive caching with immutable
    location ~* \.(js|css)$ {
        expires 1y;
        add_header Cache-Control "public, immutable, max-age=31536000";
        access_log off;
        try_files $uri =404;
    }

    # Other static assets - long cache but not immutable
    location ~* \.(png|jpg|jpeg|gif|ico|svg|woff2?|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000";
        access_log off;
        try_files $uri =404;
    }

    # SPA fallback - serve index.html for client-side routes
    location / {
        try_files $uri $uri/ /index.html;

        # Default cache prevention for dynamic routes
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";

        # Security headers
        add_header X-Frame-Options SAMEORIGIN;
        add_header X-Content-Type-Options nosniff;
        add_header X-XSS-Protection "1; mode=block";
        add_header Referrer-Policy strict-origin-when-cross-origin;
    }

    # Issue #1099: Extended timeouts for heavy analytics/code-intelligence
    location ~ ^/api/(analytics|code-intelligence)/ {
        proxy_pass {{ backend_protocol | default('https') }}://autobot_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
        proxy_ssl_verify off;
        proxy_next_upstream error timeout http_502 http_504;
        proxy_next_upstream_timeout 10s;
    }

    # API proxy to user backend
    location /api/ {
        proxy_pass {{ backend_protocol | default('https') }}://autobot_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        proxy_ssl_verify off;
        proxy_next_upstream error timeout http_502 http_504;
        proxy_next_upstream_timeout 10s;
    }

    # WebSocket proxy for terminal/chat
    location /api/ws {
        proxy_pass {{ backend_protocol | default('https') }}://autobot_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 86400;
        proxy_ssl_verify off;
    }

    location /api/terminal/ws {
        proxy_pass {{ backend_protocol | default('https') }}://autobot_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 300s;
        proxy_ssl_verify off;
    }

    # WebSocket general
    location /ws {
        proxy_pass {{ backend_protocol | default('https') }}://autobot_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_read_timeout 86400;
        proxy_ssl_verify off;
    }

    # VNC proxy for desktop access
    location /tools/novnc/ {
        proxy_pass http://{{ backend_host }}:6080/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # Health check
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
}
