# Server
HOST={{ browser_host | default('0.0.0.0') }}
PORT={{ playwright_port }}

# Base dir
AUTOBOT_BASE_DIR=/opt/autobot

# Redis
REDIS_HOST={{ browser_redis_host | default(redis_host | default('172.16.168.23')) }}
REDIS_PORT={{ browser_redis_port | default(6379) }}
{% if browser_redis_password | default('') | length > 0 %}
REDIS_PASSWORD={{ browser_redis_password }}
{% endif %}

# Playwright
BROWSER_TIMEOUT={{ browser_timeout }}
HEADLESS={{ headless_mode | lower }}

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/autobot
