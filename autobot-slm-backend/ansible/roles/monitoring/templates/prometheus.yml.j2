# Prometheus Configuration - Generated by Ansible
---

global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_evaluation_interval }}

alerting:
  alertmanagers: []

rule_files: []

scrape_configs:
  # Prometheus self-monitoring
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:{{ prometheus_port }}"]

  # SLM Backend metrics
  - job_name: "slm"
    static_configs:
      - targets: ["localhost:8000"]
    metrics_path: /api/metrics
    scheme: http

  # Node exporters on managed nodes
  - job_name: "node"
    static_configs:
      - targets:
{% for target in prometheus_targets %}
          - "{{ target }}"
{% endfor %}
{% if prometheus_targets | length == 0 %}
          - "localhost:{{ node_exporter_port }}"
{% endif %}

  # AutoBot backend (if running)
  - job_name: "autobot-backend"
    static_configs:
      - targets: ["172.16.168.20:8001"]
    metrics_path: /metrics
    scheme: http

  # Redis exporter (if available)
  - job_name: "redis"
    static_configs:
      - targets: ["172.16.168.23:9121"]
    scheme: http
