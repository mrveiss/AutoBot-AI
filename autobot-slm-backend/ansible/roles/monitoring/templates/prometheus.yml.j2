# Prometheus Configuration - Generated by Ansible
---

global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_evaluation_interval }}

alerting:
  alertmanagers: []

rule_files: []

scrape_configs:
  # Prometheus self-monitoring
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:{{ prometheus_port }}"]

  # SLM Backend metrics
  - job_name: "slm"
    static_configs:
      - targets: ["localhost:8000"]
    metrics_path: /api/performance/metrics/prometheus
    scheme: http

  # Node exporters on all managed fleet nodes (auto-populated from inventory)
  - job_name: "node"
    static_configs:
      - targets:
{% for host in groups.get('slm_nodes', []) %}
          - "{{ hostvars[host]['ansible_host'] }}:{{ node_exporter_port }}"
{% endfor %}
{% if groups.get('slm_nodes', []) | length == 0 %}
          - "localhost:{{ node_exporter_port }}"
{% endif %}

  # AutoBot backend metrics (HTTPS with self-signed cert, issue #944)
  - job_name: "autobot-backend"
    static_configs:
      - targets: ["172.16.168.20:8443"]
    metrics_path: /api/metrics
    scheme: https
    tls_config:
      insecure_skip_verify: true

  # Redis exporter (if available)
  - job_name: "redis"
    static_configs:
      - targets: ["172.16.168.23:9121"]
    scheme: http
