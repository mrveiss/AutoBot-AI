# AutoBot Distributed Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Deployment mode
AUTOBOT_DEPLOYMENT_MODE=distributed

# Coordinator configuration
AUTOBOT_COORDINATOR_HOST={{ coordinator_host }}
AUTOBOT_BACKEND_PORT={{ backend_port }}

# Fleet node hostnames (from inventory)
{% for node in fleet_nodes %}
AUTOBOT_{{ node.role | upper | replace('-', '_') }}_HOST={{ node.host }}
AUTOBOT_{{ node.role | upper | replace('-', '_') }}_PORT={{ node.port }}
{% endfor %}

# Service ports
AUTOBOT_REDIS_PORT={{ redis_port }}
AUTOBOT_FRONTEND_PORT={{ frontend_port }}
AUTOBOT_NPU_WORKER_PORT={{ npu_worker_port }}
AUTOBOT_AI_STACK_PORT={{ ai_stack_port }}
AUTOBOT_BROWSER_SERVICE_PORT={{ browser_service_port }}
AUTOBOT_OLLAMA_PORT={{ ollama_port }}
AUTOBOT_VNC_PORT={{ vnc_port }}

# SSH configuration
AUTOBOT_SSH_KEY={{ ssh_key_path }}
AUTOBOT_SSH_USER={{ service_user }}

# Paths
AUTOBOT_PROJECT_ROOT={{ project_root }}
AUTOBOT_CONFIG_DIR={{ config_dir }}
AUTOBOT_LOGS_DIR={{ logs_dir }}
AUTOBOT_SCRIPTS_DIR={{ scripts_dir }}
AUTOBOT_BACKUP_DIR={{ backup_dir }}

# Monitoring
AUTOBOT_HEALTH_CHECK_INTERVAL={{ health_check_interval }}
AUTOBOT_LOG_LEVEL={{ log_level }}
