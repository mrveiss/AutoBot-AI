# TTS Worker Environment (#1054: Pocket TTS)

# Server
TTS_HOST={{ tts_host }}
TTS_PORT={{ tts_port }}

# Pocket TTS
TTS_MODELS_DIR={{ tts_models_dir }}
TTS_VOICES_DIR={{ tts_voices_dir }}

# Cache dirs (no home dir for system user)
HF_HOME={{ tts_models_dir }}
XDG_CACHE_HOME={{ tts_models_dir }}

# Redis
REDIS_HOST={{ tts_redis_host }}
REDIS_PORT={{ tts_redis_port }}
{% if tts_redis_password | length > 0 %}
REDIS_PASSWORD={{ tts_redis_password }}
{% endif %}
