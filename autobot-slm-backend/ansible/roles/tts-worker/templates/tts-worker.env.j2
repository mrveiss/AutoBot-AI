# TTS Worker Environment (#928)

# Server
TTS_HOST={{ tts_host }}
TTS_PORT={{ tts_port }}

# Model
TTS_MODEL_ID={{ tts_model_id }}
TTS_DEVICE={{ tts_device }}
TTS_MODELS_DIR={{ tts_models_dir }}

# HuggingFace cache (no home dir for system user)
HF_HOME={{ tts_models_dir }}
TRANSFORMERS_CACHE={{ tts_models_dir }}
XDG_CACHE_HOME={{ tts_models_dir }}

# Redis
REDIS_HOST={{ tts_redis_host }}
REDIS_PORT={{ tts_redis_port }}
{% if tts_redis_password | length > 0 %}
REDIS_PASSWORD={{ tts_redis_password }}
{% endif %}
