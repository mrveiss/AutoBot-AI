# AutoBot Agent Logging Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

version: 1
disable_existing_loggers: false

formatters:
  default:
    format: '[%(asctime)s] %(levelname)s in %(name)s: %(message)s'
    datefmt: '%Y-%m-%d %H:%M:%S'

  detailed:
    format: '[%(asctime)s] %(levelname)s [%(name)s.%(funcName)s:%(lineno)d] %(message)s'
    datefmt: '%Y-%m-%d %H:%M:%S'

handlers:
  console:
    class: logging.StreamHandler
    level: {{ log_level }}
    formatter: default
    stream: ext://sys.stdout

  file:
    class: logging.handlers.RotatingFileHandler
    level: {{ log_level }}
    formatter: detailed
    filename: {{ logs_dir }}/agent.log
    maxBytes: 10485760  # 10MB
    backupCount: 5

  error_file:
    class: logging.handlers.RotatingFileHandler
    level: ERROR
    formatter: detailed
    filename: {{ logs_dir }}/agent_errors.log
    maxBytes: 10485760  # 10MB
    backupCount: 5

root:
  level: {{ log_level }}
  handlers:
    - console
    - file
    - error_file

loggers:
  autobot:
    level: {{ log_level }}
    handlers:
      - console
      - file
    propagate: no

  uvicorn:
    level: INFO
    handlers:
      - console
      - file
    propagate: no
