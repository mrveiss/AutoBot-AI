# AutoBot Agent Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

agent:
  name: {{ inventory_hostname }}
  role: {{ agent_role }}
  port: {{ agent_port }}
  log_level: {{ log_level }}

project:
  root: {{ project_root }}
  config_dir: {{ config_dir }}
  logs_dir: {{ logs_dir }}
  models_dir: {{ models_dir }}
  uploads_dir: {{ uploads_dir }}

python:
  version: {{ python_version }}
  venv: {{ venv_dir }}

services:
  redis:
    host: {{ redis_host }}
    port: {{ redis_port }}

  postgresql:
    host: {{ postgresql_host }}
    port: {{ postgresql_port }}
    database: {{ postgresql_database }}
    user: {{ postgresql_user }}

openvino:
  enabled: {{ install_openvino }}
  version: {{ openvino_version }}

ollama:
  enabled: {{ install_ollama }}
  models: {{ ollama_models | to_json }}

playwright:
  enabled: {{ install_playwright }}
  browsers: {{ playwright_browsers_list | to_json }}
