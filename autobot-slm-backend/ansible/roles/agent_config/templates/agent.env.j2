# AutoBot Agent Environment Variables
# Generated by Ansible - DO NOT EDIT MANUALLY

# Project paths
AUTOBOT_BASE_DIR={{ project_root }}
AUTOBOT_CONFIG_DIR={{ config_dir }}
AUTOBOT_LOGS_DIR={{ logs_dir }}
AUTOBOT_MODELS_DIR={{ models_dir }}
AUTOBOT_UPLOADS_DIR={{ uploads_dir }}

# Python environment
PYTHONPATH={{ project_root }}
VIRTUAL_ENV={{ venv_dir }}

# Redis configuration
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}

# PostgreSQL configuration
POSTGRES_HOST={{ postgresql_host }}
POSTGRES_PORT={{ postgresql_port }}
POSTGRES_DB={{ postgresql_database }}
POSTGRES_USER={{ postgresql_user }}
POSTGRES_PASSWORD={{ postgresql_password }}

# Agent configuration
AGENT_ROLE={{ agent_role }}
AGENT_PORT={{ agent_port }}
LOG_LEVEL={{ log_level }}

# AI/ML frameworks
{% for key, value in env_vars.items() %}
{{ key }}={{ value }}
{% endfor %}

# OpenVINO
{% if install_openvino %}
OPENVINO_VERSION={{ openvino_version }}
{% endif %}

# Ollama
{% if install_ollama %}
OLLAMA_HOST=127.0.0.1
OLLAMA_PORT=11434
{% endif %}
