# AutoBot Frontend Environment Configuration
# Copy this file to .env and adjust values for your environment

# API Configuration
# IMPORTANT: Set VITE_HTTP_PROTOCOL=https if backend uses SSL (default since Issue #868)
VITE_HTTP_PROTOCOL=https
VITE_BACKEND_PORT=8443
VITE_API_BASE_URL=https://172.16.168.20:8443
VITE_WS_BASE_URL=wss://172.16.168.20:8443/ws

# Timeouts (milliseconds)
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Development Settings
VITE_ENABLE_DEBUG=false
VITE_ENABLE_RUM=true

# HTTP-only override (local dev without SSL)
# VITE_HTTP_PROTOCOL=http
# VITE_BACKEND_PORT=8001
# VITE_API_BASE_URL=http://172.16.168.20:8001
# VITE_WS_BASE_URL=ws://172.16.168.20:8001/ws
