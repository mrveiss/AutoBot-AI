# AutoBot Common Environment Variables
# Shared across all containers to eliminate duplicate env patterns

# Python Configuration (eliminates duplicate Python settings)
PYTHONPATH=/app:/app/src
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONIOENCODING=utf-8

# AutoBot Core Configuration
AUTOBOT_ENVIRONMENT=production
AUTOBOT_LOG_LEVEL=INFO
AUTOBOT_HOME=/app
AUTOBOT_USER=autobot

# Logging Configuration (standardizes logging across containers)
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/agent.log
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=7

# Health Check Configuration (eliminates duplicate health check settings)
HEALTH_CHECK_PORT=8000
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s

# Startup Configuration
STARTUP_TIMEOUT=120
DEPENDENCY_CHECK_TIMEOUT=60
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Resource Limits and Monitoring
MEMORY_LIMIT_WARNING=85
MEMORY_LIMIT_CRITICAL=95
CPU_LIMIT_WARNING=85
DISK_LIMIT_WARNING=90

# Performance Configuration
WORKER_PROCESSES=1
WORKER_THREADS=4
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=5

# Security Configuration (basic settings for all containers)
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=false
CORS_ENABLED=true
CORS_ORIGINS=*

# Development/Debug Configuration
DEBUG=false
RELOAD=false
ACCESS_LOG=true
ERROR_TRACEBACK=true
