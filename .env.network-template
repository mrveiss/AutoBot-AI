# Service Ports (standardized from complete.yaml)
AUTOBOT_BACKEND_PORT=8001
AUTOBOT_FRONTEND_PORT=5173
AUTOBOT_REDIS_PORT=6379
AUTOBOT_OLLAMA_PORT=11434
AUTOBOT_AI_STACK_PORT=8080
AUTOBOT_NPU_WORKER_PORT=8081
AUTOBOT_BROWSER_SERVICE_PORT=3000
AUTOBOT_VNC_PORT=6080
AUTOBOT_WEBSOCKET_PORT=8001

# Network Configuration
DOCKER_SUBNET=172.16.168.0/24
DOCKER_GATEWAY=172.16.168.1

# Frontend Environment Variables (for Vite)
VITE_BACKEND_HOST=${AUTOBOT_BACKEND_HOST}
VITE_BACKEND_PORT=${AUTOBOT_BACKEND_PORT}
VITE_REDIS_HOST=${AUTOBOT_REDIS_HOST}
VITE_REDIS_PORT=${AUTOBOT_REDIS_PORT}

# Backend Environment Variables  
REDIS_HOST=${AUTOBOT_REDIS_HOST}
REDIS_PORT=${AUTOBOT_REDIS_PORT}
OLLAMA_HOST=${AUTOBOT_BACKEND_HOST}:${AUTOBOT_OLLAMA_PORT}

# Service URL Construction
BACKEND_URL=http://${AUTOBOT_BACKEND_HOST}:${AUTOBOT_BACKEND_PORT}
FRONTEND_URL=http://${AUTOBOT_FRONTEND_HOST}:${AUTOBOT_FRONTEND_PORT}
REDIS_URL=redis://${AUTOBOT_REDIS_HOST}:${AUTOBOT_REDIS_PORT}
OLLAMA_URL=http://${AUTOBOT_BACKEND_HOST}:${AUTOBOT_OLLAMA_PORT}
AI_STACK_URL=http://${AUTOBOT_AI_STACK_HOST}:${AUTOBOT_AI_STACK_PORT}
NPU_WORKER_URL=http://${AUTOBOT_NPU_WORKER_HOST}:${AUTOBOT_NPU_WORKER_PORT}
BROWSER_SERVICE_URL=http://${AUTOBOT_BROWSER_SERVICE_HOST}:${AUTOBOT_BROWSER_SERVICE_PORT}

# Legacy compatibility (for existing files that expect these)
REDIS_HOST_IP=${AUTOBOT_REDIS_HOST}
