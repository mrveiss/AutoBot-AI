{
  "name": "autobot-code-intelligence",
  "displayName": "AutoBot Code Intelligence",
  "description": "Real-time code pattern detection, security analysis, and quick fixes powered by AutoBot",
  "version": "1.0.0",
  "publisher": "mrveiss",
  "author": {
    "name": "mrveiss"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrveiss/AutoBot-AI"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "python",
    "code quality",
    "security",
    "pattern detection",
    "autobot"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autobot.analyze",
        "title": "AutoBot: Analyze Current File"
      },
      {
        "command": "autobot.analyzeWorkspace",
        "title": "AutoBot: Analyze Workspace"
      },
      {
        "command": "autobot.toggleRule",
        "title": "AutoBot: Toggle Rule"
      },
      {
        "command": "autobot.showRules",
        "title": "AutoBot: Show Available Rules"
      },
      {
        "command": "autobot.clearDiagnostics",
        "title": "AutoBot: Clear Diagnostics"
      }
    ],
    "configuration": {
      "title": "AutoBot Code Intelligence",
      "properties": {
        "autobot.serverUrl": {
          "type": "string",
          "default": "http://localhost:8001/api/ide",
          "description": "URL of the AutoBot backend server"
        },
        "autobot.enableRealTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time analysis on file changes"
        },
        "autobot.analysisDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before triggering analysis"
        },
        "autobot.includeHints": {
          "type": "boolean",
          "default": true,
          "description": "Include hint-level diagnostics"
        },
        "autobot.disabledRules": {
          "type": "array",
          "default": [],
          "description": "List of disabled rule IDs"
        },
        "autobot.enabledCategories": {
          "type": "array",
          "default": [
            "security",
            "performance",
            "code_quality",
            "best_practice",
            "error_prone"
          ],
          "description": "Enabled pattern categories"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "autobot.analyze",
          "group": "autobot"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
