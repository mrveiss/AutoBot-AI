# AutoBot Localhost Development Configuration
# Use this for local development without Docker

# ==============================================
# LOCALHOST DEVELOPMENT CONFIGURATION
# ==============================================
# All services running on localhost with different ports

# Core Infrastructure
AUTOBOT_REDIS_HOST=127.0.0.1
AUTOBOT_REDIS_PORT=6379

# AI Services
AUTOBOT_OLLAMA_HOST=127.0.0.1
AUTOBOT_OLLAMA_PORT=11434

# Application Services
AUTOBOT_BACKEND_HOST=127.0.0.1
AUTOBOT_BACKEND_PORT=8001

AUTOBOT_FRONTEND_HOST=127.0.0.1
AUTOBOT_FRONTEND_PORT=5173

# Automation Services
AUTOBOT_PLAYWRIGHT_HOST=127.0.0.1
AUTOBOT_PLAYWRIGHT_API_PORT=3000
AUTOBOT_PLAYWRIGHT_VNC_PORT=6080

# Worker Services
AUTOBOT_NPU_WORKER_HOST=127.0.0.1
AUTOBOT_NPU_WORKER_PORT=8081

AUTOBOT_AI_STACK_HOST=127.0.0.1
AUTOBOT_AI_STACK_PORT=8080

# Monitoring Services
AUTOBOT_PROMETHEUS_HOST=127.0.0.1
AUTOBOT_PROMETHEUS_PORT=9090

AUTOBOT_GRAFANA_HOST=127.0.0.1
AUTOBOT_GRAFANA_PORT=3000

AUTOBOT_LOG_VIEWER_HOST=127.0.0.1
AUTOBOT_LOG_VIEWER_PORT=5341

# Deployment Mode - Fixed: 'localhost' is not a valid mode, use 'local'
AUTOBOT_DEPLOYMENT_MODE=local

# Vue.js Frontend Configuration
VITE_API_URL=http://host.docker.internal:8001
VITE_WS_BASE_URL=ws://host.docker.internal:8001/ws
